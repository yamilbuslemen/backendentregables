{{#if error}}
<div class="alert alert-danger">{{error}}</div>
{{/if}}

{{#if message}}
<div class="alert alert-info">{{message}}</div>
{{/if}}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 mt-5">
            <div class="card">
                <div class="card-body">
                    <h2 class="text-center mb-4">Create Password</h2>

                    <form action="/auth/create-password/{{email}}/{{date}}" method="post">
                        
                        <div class="form-group">
                            <label for="newPassword">New Password:</label>
                            <input type="password" class="form-control" id="newPassword" name="newPassword" required>
                        </div>
                        
                        <div class="form-group">
                            <label for="confirmPassword">Confirm New Password:</label>
                            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
                            <small id="passwordWarning" class="text-danger" style="display: none;">Passwords do not coincide!</small>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary my-2 btn-lg mt-3 px-3">Restore Password</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/js/create-password.js"></script>